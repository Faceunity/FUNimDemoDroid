<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/jrmf_b_shape_round_white"
                android:paddingBottom="@dimen/jrmf_dimen_8">


    <TextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:layout_below="@+id/line"
        android:layout_margin="@dimen/jrmf_dimen_8"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:text="您尚未绑定银行卡，发红包的累计限额为100元，请绑定银行卡后再发红包"
        android:textColor="@color/jrmf_rp_black"
        android:textSize="16sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text"
        android:background="@color/jrmf_b_white"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/jrmf_dimen_16"
            android:layout_marginRight="7dip"
            android:layout_weight="1"
            android:background="@color/jrmf_b_white"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="取消"
            android:textColor="@color/jrmf_b_blue"/>

        <Button
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dip"
            android:layout_marginRight="@dimen/jrmf_dimen_16"
            android:layout_weight="1"
            android:background="@color/jrmf_b_white"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:text="去绑卡"
            android:textColor="@color/jrmf_b_blue"/>

    </LinearLayout>


</RelativeLayout>
