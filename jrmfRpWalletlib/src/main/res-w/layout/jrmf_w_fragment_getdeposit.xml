<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/jrmf_w_color_bg"
    android:orientation="vertical">

    <com.jrmf360.normallib.wallet.widget.VerticalScrollView
        android:id="@+id/vertical_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_bankCard"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/jrmf_dimen_8"
                android:background="@drawable/jrmf_w_selector_item"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/jrmf_dimen_16"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_bankIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/jrmf_w_ic_card" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/jrmf_dimen_8"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_cardName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中国工商银行(1985)"
                        android:textColor="@color/jrmf_b_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_cardType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="储蓄卡"
                        android:textColor="@color/jrmf_w_gray"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/jrmf_dimen_8"
                    android:src="@drawable/jrmf_w_arrow_right" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_add_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_mywallet_height"
                android:layout_marginTop="@dimen/jrmf_dimen_8"
                android:background="@color/jrmf_b_white"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/jrmf_dimen_8"
                    android:gravity="center_vertical"
                    android:text="＋添加银行卡"
                    android:textColor="@color/jrmf_b_title_bar_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_sup_bank_prompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/jrmf_dimen_8"
                android:paddingRight="@dimen/jrmf_dimen_8"
                android:paddingTop="@dimen/jrmf_dimen_8"
                android:text="@string/jrmf_w_sup_bank_prompt"
                android:textColor="@color/jrmf_w_color_a0a0a0"
                android:textSize="12sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ll_sub_bank_province"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_mywallet_height"
                android:layout_marginTop="@dimen/jrmf_dimen_8"
                android:background="@drawable/jrmf_w_selector_item"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_sub_bank_province"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/jrmf_dimen_8"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/jrmf_w_sub_bank_province"
                    android:textColor="@color/jrmf_b_black"
                    android:textSize="14sp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/jrmf_dimen_8"
                    android:src="@drawable/jrmf_w_arrow_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_sub_bank_city"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_mywallet_height"
                android:layout_marginTop="@dimen/jrmf_dimen_8"
                android:background="@drawable/jrmf_w_selector_item"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_sub_bank_city"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/jrmf_dimen_8"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/jrmf_w_sub_bank_city"
                    android:textColor="@color/jrmf_b_black"
                    android:textSize="14sp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/jrmf_dimen_8"
                    android:src="@drawable/jrmf_w_arrow_right" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_limit"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/jrmf_dimen_8"
                android:textColor="@color/jrmf_w_color_a0a0a0"
                android:textSize="12sp"
                tools:text="该卡本次最多可提现1.00元" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_mywallet_height"
                android:background="@color/jrmf_b_white">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/jrmf_dimen_8"
                    android:gravity="center_vertical"
                    android:text="到账时间"
                    android:textColor="@color/jrmf_b_black"
                    android:textSize="14sp" />

                <com.jrmf360.normallib.base.view.ClearEditText
                    android:id="@+id/cet_get_money_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:enabled="false"
                    android:focusable="false"
                    android:hint=""
                    android:textColor="@color/jrmf_b_black"
                    android:textColorHint="@color/jrmf_w_color_c9c9c9"
                    android:textSize="14sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_mywallet_height"
                android:layout_marginTop="@dimen/jrmf_dimen_8"
                android:background="@color/jrmf_b_white">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/jrmf_dimen_8"
                    android:gravity="center_vertical"
                    android:text="提现金额"
                    android:textColor="@color/jrmf_b_black"
                    android:textSize="14sp" />

                <com.jrmf360.normallib.base.view.ClearEditText
                    android:id="@+id/cet_get_money"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/jrmf_dimen_8"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入提现金额"
                    android:inputType="numberDecimal"
                    android:maxLength="8"
                    android:textColor="@color/jrmf_b_black"
                    android:textColorHint="@color/jrmf_w_color_c9c9c9"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_all_money"
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="@dimen/jrmf_dimen_8"
                    android:background="@drawable/jrmf_w_shape_code_bg"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="全部提现"
                    android:textColor="@color/jrmf_b_title_bar_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_over_tip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/jrmf_dimen_8"
                android:layout_marginTop="@dimen/jrmf_dimen_8"
                android:text="手续费2元"
                android:textColor="@color/jrmf_w_jrmf_w_red"
                android:textSize="14sp"
                android:visibility="visible" />


            <Button
                android:id="@+id/btn_next"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginLeft="@dimen/jrmf_dimen_16"
                android:layout_marginRight="@dimen/jrmf_dimen_16"
                android:layout_marginTop="@dimen/jrmf_dimen_16"
                android:background="@drawable/jrmf_w_selector_round_btn"
                android:text="下一步"
                android:textColor="@color/jrmf_b_white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/jrmf_dimen_16"
                android:layout_marginRight="@dimen/jrmf_dimen_16"
                android:layout_marginTop="@dimen/jrmf_dimen_16"
                android:text=""
                android:textColor="@color/jrmf_w_gray"
                android:textSize="14sp" />

        </LinearLayout>
    </com.jrmf360.normallib.wallet.widget.VerticalScrollView>
</LinearLayout>



